{
  "name": "@delta-comic/plugin",
  "version": "0.0.2",
  "description": "空阙虱楼",
  "homepage": "https://github.com/delta-comic/delta-comic-core",
  "license": "AGPL-3.0-only",
  "author": {
    "name": "wenxig",
    "email": "wenxinguo12@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/delta-comic/delta-comic-core.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build && pnpm pack --out ./dist/pack.tgz",
    "version:major": "pnpm version major --no-git-tag-version",
    "version:minor": "pnpm version minor --no-git-tag-version",
    "version:patch": "pnpm version patch --no-git-tag-version"
  },
  "dependencies": {
    "@delta-comic/core": "workspace:*",
    "@delta-comic/db": "workspace:*",
    "@delta-comic/model": "workspace:*",
    "@delta-comic/ui": "workspace:*",
    "@delta-comic/utils": "workspace:*",
    "@octokit/rest": "^22.0.1",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "@vueuse/core": "catalog:",
    "jszip": "^3.10.1",
    "lz-string": "^1.5.0",
    "mitt": "catalog:",
    "userscript-meta": "^1.0.1"
  },
  "peerDependencies": {
    "axios": "^1.13",
    "kysely": "^0.28",
    "pinia": "^3.0",
    "vue": "^3.5",
    "vue-router": "^5.0"
  },
  "release": {
    "tagFormat": "plugin-${version}"
  },
  "dist": {
    "tarball": "./dist/pack.tgz"
  },
  "readme": "./README.md"
}